{
  "name": "calendar-bot",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "bullmq": "^4.15.0",
    "cheerio": "^1.0.0-rc.12",
    "chrono-node": "^2.7.4",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "ioredis": "^5.3.2",
    "luxon": "^3.5.0",
    "pino": "^8.17.2",
    "prom-client": "^15.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "prisma": "^5.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
