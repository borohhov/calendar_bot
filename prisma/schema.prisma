generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String              @id @default(uuid())
  phone        String              @unique
  displayName  String?
  timezone     String
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  connections  ChannelConnection[]
  webSources   WebSource[]
  events       Event[]
  preferences  Preference?
  conversations Conversation[]
  crawlJobs     CrawlJob[]
}

model ChannelConnection {
  id            String         @id @default(uuid())
  userId        String
  channelType   String
  provider      String
  status        String
  authMetadata  Json?
  lastSyncAt    DateTime?
  createdAt     DateTime       @default(now())
  revokedAt     DateTime?
  user          User           @relation(fields: [userId], references: [id])
  conversations Conversation[]
  eventSources  EventSource[]
}

model WebSource {
  id                    String       @id @default(uuid())
  userId                String
  name                  String?
  url                   String
  crawlFrequencyMinutes Int
  status                String
  lastCrawledAt          DateTime?
  createdAt             DateTime     @default(now())
  user                  User         @relation(fields: [userId], references: [id])
  eventSources          EventSource[]
  crawlJobs             CrawlJob[]
}

model Event {
  id             String        @id @default(uuid())
  userId         String
  title          String
  normalizedTitle String
  description    String?
  startAt        DateTime?
  endAt          DateTime?
  timezone       String
  locationName   String?
  locationAddress String?
  status         String
  completeness   String
  confidence     Float
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  user           User          @relation(fields: [userId], references: [id])
  sources        EventSource[]

  @@index([userId, normalizedTitle, startAt])
}

model EventSource {
  id                  String             @id @default(uuid())
  eventId             String
  sourceType          String
  sourceRef           String
  extractedAt         DateTime
  rawExcerptHash      String?
  confidence          Float
  metadata            Json?
  webSourceId         String?
  channelConnectionId String?
  event               Event              @relation(fields: [eventId], references: [id])
  webSource           WebSource?         @relation(fields: [webSourceId], references: [id])
  channelConnection   ChannelConnection? @relation(fields: [channelConnectionId], references: [id])
}

model CrawlJob {
  id             String      @id @default(uuid())
  userId         String
  webSourceId    String?
  entryUrls      String[]
  maxDepth       Int
  allowExternal  Boolean     @default(false)
  status         String
  pagesVisited   Int         @default(0)
  pagesFailed    Int         @default(0)
  eventsCaptured Int         @default(0)
  startedAt      DateTime?
  completedAt    DateTime?
  errorSummary   String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  user           User        @relation(fields: [userId], references: [id])
  webSource      WebSource?  @relation(fields: [webSourceId], references: [id])
  pages          CrawlPage[]
}

model CrawlPage {
  id           String    @id @default(uuid())
  crawlJobId   String
  url          String
  depth        Int
  status       String
  httpStatus   Int?
  contentHash  String?
  parsedAt     DateTime?
  error        String?
  discoveredFrom String?
  createdAt    DateTime  @default(now())
  crawlJob     CrawlJob  @relation(fields: [crawlJobId], references: [id])

  @@index([crawlJobId, url])
}

model Preference {
  id                  String   @id @default(uuid())
  userId              String   @unique
  preferredCategories String[] @default([])
  preferredLocations  String[] @default([])
  availabilityRules   Json?
  avoidTimes          Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  user                User     @relation(fields: [userId], references: [id])
}

model Conversation {
  id                  String             @id @default(uuid())
  userId              String
  channelConnectionId String
  startedAt           DateTime           @default(now())
  lastMessageAt       DateTime?
  contextJson         Json?
  user                User               @relation(fields: [userId], references: [id])
  channelConnection   ChannelConnection  @relation(fields: [channelConnectionId], references: [id])
}
